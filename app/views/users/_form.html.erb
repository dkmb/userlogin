<%= form_for(@user) do |f| %>
  <%= render "shared/errors", object: @user %>
  <fieldset>
    <p>
      <%= f.label :username %>
      <%= f.text_field :username, autofocus: true %>
    </p>
    <p>
      <%= f.label :password %>
      <%= f.text_field :password %>
    </p>
    <p>
      <%= f.label :email %>
      <%= f.text_field :email %>
    </p>
    <p>
      <%= f.submit %>
      <%= link_to "Cancel", users_path %>
    </p>
  </fieldset>
<% end %>